{
  "name": "ContextKeeper",
  "lowCaseName": "contextkeeper",
  "description": "Prevent resources from being saved in the wrong context",
  "author": "Thomas Jakobi",
  "version": "1.0.3",
  "package": {
    "elements": {
      "plugins": [
        {
          "name": "ContextKeeper",
          "description": "Prevent resources from being saved in the wrong context",
          "file": "contextkeeper.plugin.php",
          "events": [
            "OnBabelDuplicate",
            "OnBeforeDocFormDelete",
            "OnBeforeDocFormSave",
            "OnDocFormPrerender",
            "OnDocPublished",
            "OnDocUnPublished",
            "OnResourceBeforeSort",
            "OnResourceDuplicate"
          ]
        }
      ]
    },
    "systemSettings": [
      {
        "key": "debug",
        "type": "combo-boolean",
        "area": "system",
        "value": "0"
      },
      {
        "key": "check_empty",
        "type": "combo-boolean",
        "area": "system",
        "value": "0"
      },
      {
        "key": "disable_duplicate_button",
        "type": "combo-boolean",
        "area": "system",
        "value": "0"
      },
      {
        "key": "writable_contexts",
        "area": "system",
        "value": ""
      }
    ]
  },
  "dependencies": [
    {
      "name": "php",
      "version": ">=7.2"
    },
    {
      "name": "modx",
      "version": ">=2.8"
    }
  ],
  "build": {
    "readme": "docs/readme.md",
    "license": "docs/license.md",
    "changelog": "docs/changelog.md",
    "resolver": {
      "after": [
        "resolve.cleanup.php",
        "resolve.treehillstudio.php"
      ]
    }
  }
}
